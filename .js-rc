parquet2json_jq() {
    if [ $# -eq 0 ]; then
        echo "Usage: parquet2json_jq [...args] <jq-filter>" >&2
        return 1
    fi
    local _query=("${@: -1}")
    local query="${_query[0]}"
    set -- "${@:1:$#-1}"
    parquet-2-json.sh cat "$@" | jq "$query"
}
