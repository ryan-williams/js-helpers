parquet2json_all() {
    local tmpfile=
    if [ $# -eq 0 ] || ([ $# -eq 1 ] && [ "$1" == "-" ]); then
        tmpfile="$(mktemp)"
        cat > "$tmpfile"
        set -- "$tmpfile"
    fi
    parquet-2-json.sh rowcount "$@" && \
    parquet-2-json.sh schema "$@" && \
    parquet-2-json.sh cat -l 10 "$@"
    rv=$?
    if [ -n "$tmpfile" ]; then
        rm "$tmpfile"
    fi
    return $rv
}
export -f parquet2json_all
