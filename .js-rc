singleton_object() {
    flags=()
    while [[ "$1" == -* ]]; do
        flags+=("$1")
        shift
    done
    k="$1"; shift
    if [ "${k:0:1}" == "." ]; then
        k="${k:1}"
    fi
    jq "
        if (. | length) == 1 and has(\"$k\") then
            .$k
        else
            error(\"Expected object with single key \\\"$k\\\", found {\\\"\" + (.|keys|join(\"\\\", \\\"\")) + \"\\\"}\")
        end
    " "${flags[@]}" "$@"
}
export -f singleton_object
