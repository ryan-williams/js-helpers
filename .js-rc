#!/usr/bin/env bash

# Node
append_to NODE_PATH .

export jsh="$(dirname "${BASH_SOURCE[0]}")/js-helpers"

append_to_path "$HOME/node_modules/.bin"
append_to_path "node_modules/.bin"

if which brew &> /dev/null; then
  export NVM_DIR=~/.nvm
  nvm_dir="$(brew --prefix nvm)"
  if [ -d "$nvm_dir" ]; then
    . "$nvm_dir/nvm.sh"
  fi
fi

defn nr npm run

defn ppj pretty-print-json.js

defn jf jq -f
defn jqf jq -f
defn jr jq -r
defn jqr jq -r

defn nrb npm run build
defn nrd npm run dev
