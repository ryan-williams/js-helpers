human_readable_sum() {
  if [ $# -eq 0 ] || [ $# -gt 2 ]; then
    echo "Usage: ${FUNCNAME[0]} <num> [file]" >&2
    return 1
  fi
  local col="$1"; shift
  if [ $# -eq 1 ]; then
    cat "$1"
  else
    cat
  fi | tr '\t' ' ' | tr -s ' ' | awk "{ print \$$col }" | numfmt --from=iec | sum | numfmt --to=iec
}
export -f human_readable_sum
